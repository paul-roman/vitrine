/* Input Focus */
@inputColor: @selectedTextColor;
@inputFocusColor: @selectedTextColor;

/* Text area */
@textAreaFontSize: 16px;

/* Errored input */
@formErrorBorder: #8C3A3A;
@formErrorBackground: #3A3232;

@inputErrorFocusColor: @formErrorColor;
@inputErrorFocusBorder: @formErrorBorder;
@inputErrorFocusBackground: @formErrorBackground;
