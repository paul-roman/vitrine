{
  "appId": "com.paul-roman.vitrine",
  "productName": "Vitrine",
  "win": {
    "target": "nsis",
    "icon": "sources/client/resources/images/vitrine.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "sources/client/resources/images/vitrine.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "multiLanguageInstaller": true,
    "artifactName": "${productName}_${version}_Setup.${ext}",
    "publish": {
      "provider": "github",
      "vPrefixedTagName": true
    }
  },
  "appImage": {
    "artifactName": "${productName}_${version}_Setup.${ext}",
    "publish": {
      "provider": "github",
      "vPrefixedTagName": true
    }
  },
  "files": [
    "!.circleci",
    "!.idea",
    "!sources",
    "!games",
    "!node_modules",
    "!tests",
    "!scripts",
    "!.gitignore",
    "!AUTHORS.md",
    "!CHANGELOG.md",
    "!LICENSE.md",
    "!README.md",
    "!tsconfig.json",
    "!vitrine.log.html",
    "!webpack.*.js",
    "!yarn.lock"
  ],
  "extraResources": [
    "config/lang",
    "config/modules_config.json",
    "modules/*.node",
    "*app-update.yml"
  ]
}
