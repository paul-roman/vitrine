{
  "appId": "com.paul-roman.vitrine",
  "productName": "Vitrine",
  "win": {
    "target": "nsis",
    "icon": "sources/client/resources/images/vitrine.ico",
    "publish": [ "github" ]
  },
  "linux": {
    "target": "tar.gz",
    "icon": "sources/client/resources/images/vitrine.png",
    "category": "Utility",
    "artifactName": "${productName}_${version}_Setup.${ext}",
    "publish": [ "github" ]
  },
  "nsis": {
    "oneClick": false,
    "multiLanguageInstaller": true,
    "artifactName": "${productName}_${version}_Setup.${ext}"
  },
  "files": [
    "!.circleci",
    "!.github",
    "!.idea",
    "!games",
    "!node_modules",
    "!scripts",
    "!sources",
    "!tests",
    "!webpack",
    "!.gitignore",
    "!.grenrc.json",
    "!AUTHORS.md",
    "!CHANGELOG.md",
    "!LICENSE.md",
    "!README.md",
    "!tsconfig.json",
    "!tslint.json",
    "!vitrine.log.html",
    "!yarn.lock"
  ],
  "extraResources": [
    "config/lang",
    "config/modules_config.json",
    "modules/*.node",
    "*app-update.yml"
  ]
}
