{
  "name": "vitrine",
  "version": "0.0.10",
  "description": "A modern game library using Electron, NodeJS and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "build": {
    "appId": "my.id",
    "productName": "Vitrine",
    "extraResources": [
      "games",
      "scripts"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "animate.sass": "^1.0.1",
    "bootstrap-sass": "^3.3.7",
    "change-case": "^3.0.1",
    "download-file": "^0.1.5",
    "electron-titlebar": "0.0.3",
    "font-awesome": "^4.7.0",
    "form-to-object": "^5.0.0",
    "glob": "^7.1.2",
    "igdb-api-node": "^3.0.1",
    "jquery": "^3.2.1",
    "sass-percentage-circle": "^0.2.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jquery": "^3.2.10",
    "@types/node": "^8.0.19",
    "@types/uuid": "^3.4.0",
    "awesome-typescript-loader": "^3.2.2",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "node-sass-chokidar": "0.0.3",
    "parallel-webpack": "^2.1.0",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar assets/sass/main.scss public/app.css",
    "build-prod": "node-sass-chokidar assets/sass/main.scss public/app.css --output-style compressed",
    "start": "webpack && npm run build-css && electron .",
    "run-electron": "electron .",
    "run-server-electron": "webpack --config config/server.build.js && electron .",
    "run-client-electron": "webpack --config config/client.build.js && electron .",
    "run-style-electron": "npm run build-css && electron .",
    "test": "echo \"Error: no test specified\" && exit 0",
    "pack": "webpack && npm run build-css && electron-builder --dir",
    "dist": "webpack && npm run build-css && electron-builder"
  }
}
