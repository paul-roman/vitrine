{
  "name": "vitrine",
  "version": "0.6.1",
  "description": "A modern game library using Electron, Node and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/paul-roman/vitrine.git"
  },
  "build": {
    "appId": "com.github.paul-roman.vitrine",
    "productName": "Vitrine",
    "win": {
      "target": "nsis",
      "icon": "assets/client/images/vitrine.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}_${version}_Setup.${ext}",
      "multiLanguageInstaller": true,
      "publish": {
        "provider": "github",
        "vPrefixedTagName": true
      }
    },
    "files": [
      "!.circleci",
      "!.idea",
      "!assets",
      "!tests",
      "!.gitignore",
      "!LICENSE.md",
      "!README.md",
      "!tsconfig.json",
      "!webpack.config.js"
    ],
    "extraResources": [
      "games",
      "config",
      "scripts/*.exe"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "animate.sass": "^1.0.1",
    "aphrodite": "^1.2.5",
    "bootstrap-datepicker": "^1.7.1",
    "bootstrap-select": "^1.12.4",
    "css-verbose": "^0.3.0",
    "download-file": "^0.1.5",
    "electron-updater": "^2.15.1",
    "font-awesome": "^4.7.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "google-translate-api": "^2.3.0",
    "igdb-api-node": "^3.0.2",
    "jquery": "^3.2.1",
    "moment": "^2.19.1",
    "react": "^16.0.0",
    "react-contextmenu": "^2.8.0",
    "react-datetime": "^2.10.3",
    "react-dom": "^16.0.0",
    "react-tooltip": "^3.4.0",
    "react-transition-group": "^2.2.1",
    "rimraf": "^2.6.2",
    "sass-percentage-circle": "^0.2.0",
    "steam-web": "^0.6.0",
    "text-ellipsis": "^1.0.3",
    "uuid": "^3.1.0",
    "winreg": "^1.2.4",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/aphrodite": "^0.5.6",
    "@types/bootstrap-datepicker": "0.0.9",
    "@types/bootstrap-select": "^1.11.1",
    "@types/chai": "^4.0.4",
    "@types/electron": "^1.6.10",
    "@types/fs-extra": "^4.0.3",
    "@types/glob": "^5.0.33",
    "@types/jquery": "^3.2.16",
    "@types/mocha": "^2.2.44",
    "@types/moment": "^2.13.0",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "@types/react-tooltip": "^3.3.2",
    "@types/react-transition-group": "^2.0.6",
    "@types/rimraf": "0.0.28",
    "@types/uuid": "^3.4.3",
    "@types/winreg": "^1.2.30",
    "@types/xml2js": "^0.4.0",
    "base64-inline-loader": "^1.1.0",
    "bootstrap-sass": "^3.3.7",
    "chai": "^4.1.2",
    "css-loader": "^0.28.7",
    "electron": "^1.8.1",
    "electron-builder": "^19.43.4",
    "mocha": "^3.5.3",
    "node-sass": "^4.5.3",
    "parallel-webpack": "^2.2.0",
    "sass-loader": "^6.0.6",
    "sass-variable-loader": "^0.1.2",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  },
  "scripts": {
    "compile-cpp": "cl scripts/regWatcher.cpp Advapi32.lib /EHsc && cl scripts/gameLauncher.cpp Advapi32.lib /EHsc",
    "build": "webpack && electron .",
    "run-server-electron": "webpack --config webpack.server.config.js && electron .",
    "run-client-electron": "webpack --config webpack.client.config.js && electron .",
    "start": "electron .",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --timeout 20000",
    "pack": "webpack && build --dir",
    "dist": "npm test && webpack && build",
    "release": "npm test && webpack && build --publish always"
  }
}
