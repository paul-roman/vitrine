{
  "name": "vitrine",
  "version": "0.6.5",
  "description": "A modern game library using Electron, Node and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/paul-roman/vitrine.git"
  },
  "build": {
    "appId": "com.github.paul-roman.vitrine",
    "productName": "Vitrine",
    "win": {
      "target": "nsis",
      "icon": "assets/client/images/vitrine.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}_${version}_Setup.${ext}",
      "multiLanguageInstaller": true,
      "publish": {
        "provider": "github",
        "vPrefixedTagName": true
      }
    },
    "files": [
      "!.circleci",
      "!.idea",
      "!assets",
      "!games",
      "!tests",
      "!.gitignore",
      "!LICENSE.md",
      "!README.md",
      "!tsconfig.json",
      "!webpack.*.js"
    ],
    "extraResources": [
      "config",
      "scripts/*.exe",
      "*app-update.yml"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.2",
    "@fortawesome/fontawesome-free-brands": "^5.0.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.4",
    "@fortawesome/react-fontawesome": "0.0.17",
    "@paul-roman/react-date-time-input": "^2.14.1",
    "aphrodite": "^1.2.5",
    "css-verbose": "^0.3.0",
    "download-file": "^0.1.5",
    "electron-rebuild": "^1.7.3",
    "electron-updater": "^2.20.1",
    "fs-extra": "^4.0.3",
    "glob": "^7.1.2",
    "google-translate-api": "^2.3.0",
    "igdb-api-node": "^3.1.1",
    "moment": "^2.20.1",
    "react": "^16.2.0",
    "react-contextmenu": "^2.9.2",
    "react-datetime": "^2.14.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-tooltip": "^3.4.0",
    "redux": "^3.7.2",
    "rimraf": "^2.6.2",
    "semantic-ui-react": "^0.78.3",
    "steam-web": "^0.6.0",
    "uuid": "^3.2.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-common-types": "^0.1.1",
    "@types/aphrodite": "^0.5.6",
    "@types/chai": "^4.1.1",
    "@types/fs-extra": "^4.0.7",
    "@types/glob": "^5.0.34",
    "@types/mocha": "^2.2.46",
    "@types/node": "^8.5.9",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.15",
    "@types/react-tooltip": "^3.3.3",
    "@types/rimraf": "0.0.28",
    "@types/uuid": "^3.4.3",
    "@types/winreg": "^1.2.30",
    "base64-inline-loader": "^1.1.0",
    "chai": "^4.1.2",
    "css-loader": "^0.28.9",
    "electron": "^1.8.2",
    "electron-builder": "^19.55.2",
    "html-webpack-plugin": "^2.30.1",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "less-vars-loader": "^1.1.0",
    "mocha": "^3.5.3",
    "node-gyp": "^3.6.2",
    "node-loader": "^0.6.0",
    "parallel-webpack": "^2.2.0",
    "semantic-ui-less": "^2.2.14",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "^3.11.0"
  },
  "scripts": {
    "compile-cpp": "cl scripts/gameLauncher.cpp Advapi32.lib /EHsc",
    "build": "webpack --progress && electron .",
    "build-scripts": "call scripts/buildModules.bat",
    "run-server": "webpack --progress --config webpack.server.config.js && electron .",
    "run-client": "webpack --progress --config webpack.client.config.js && electron .",
    "watch-server": "webpack --progress --config webpack.server.config.js --watch",
    "watch-client": "webpack --progress --config webpack.client.config.js --watch",
    "start": "electron .",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --timeout 20000",
    "pack": "webpack --progress && build --dir",
    "dist": "yarn test && webpack --progress && build",
    "release": "yarn test && webpack --progress && build --publish always"
  }
}
