{
  "name": "vitrine",
  "version": "0.9.4",
  "description": "Centralize all of your games within a simple interface.",
  "main": "public/server.js",
  "productName": "Vitrine",
  "author": "Paul Roman <paul.roman@epitech.eu>",
  "license": "MIT",
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/paul-roman/vitrine.git"
  },
  "engines": {
    "node": ">=8.9"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.8",
    "@fortawesome/react-fontawesome": "0.0.17",
    "aphrodite": "2.2.0",
    "axios": "^0.18.0",
    "compare-versions": "^3.4.0",
    "css-verbose": "^0.3.0",
    "discord-rich-presence": "^0.0.6",
    "download-file": "^0.1.5",
    "electron-updater": "^2.21.3",
    "flat": "^4.1.0",
    "fs-extra": "6.0.0",
    "gamepad-listener": "0.4.0",
    "glob": "^7.1.2",
    "glob-promise": "^3.4.0",
    "google-translate-api": "^2.3.0",
    "igdb-api-node": "3.1.4",
    "moment": "^2.22.0",
    "react": "16.3.2",
    "react-contextmenu": "^2.9.2",
    "react-datetime": "^2.14.0",
    "react-dom": "16.3.2",
    "react-intl": "^2.7.0",
    "react-redux": "5.0.7",
    "react-toastify": "4.0.1",
    "react-tooltip": "^3.4.0",
    "redux": "4.0.0",
    "rimraf": "^2.6.2",
    "semantic-ui-react": "0.82.5",
    "steam-web": "0.7.0",
    "steam-web-promise": "^0.8.0",
    "uuid": "^3.2.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/flat": "^0.0.28",
    "@types/fs-extra": "5.0.2",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.0.0",
    "@types/node": "8.9.3",
    "@types/react": "16.3.13",
    "@types/react-dom": "16.0.5",
    "@types/react-intl": "^2.3.11",
    "@types/react-redux": "^5.0.15",
    "@types/react-tooltip": "^3.3.4",
    "@types/rimraf": "2.0.2",
    "@types/uuid": "^3.4.3",
    "@types/winreg": "^1.2.30",
    "asar": "^0.14.3",
    "base64-inline-loader": "^1.1.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "2.0.9",
    "electron-builder": "^20.6.2",
    "electron-node-loader": "1.2.0",
    "github-release-notes": "0.16.0",
    "html-webpack-plugin": "^3.1.0",
    "husky": "^0.14.3",
    "less": "^2.7.3",
    "less-loader": "^4.1.0",
    "less-vars-loader": "^1.1.0",
    "mocha": "^5.0.5",
    "node-gyp": "^3.6.2",
    "nyc": "^13.0.1",
    "parallel-webpack": "^2.3.0",
    "semantic-ui-less": "^2.2.14",
    "shelljs": "0.8.2",
    "source-map-support": "^0.5.9",
    "style-loader": "0.21.0",
    "ts-loader": "^4.2.0",
    "ts-node": "6.0.2",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "webpack": "^4.4.0",
    "webpack-cli": "^2.0.13"
  },
  "optionalDependencies": {
    "node-windows": "^0.1.14"
  },
  "scripts": {
    "start": "cross-env ELECTRON_ENV=dev electron .",
    "build:app": "parallel-webpack --progress --config=webpack/base.config.js",
    "build:prod": "cross-env NODE_ENV=prod parallel-webpack --progress --config=webpack/base.config.js",
    "build:server": "parallel-webpack --progress --config=webpack/server.config.js",
    "build:client": "parallel-webpack --progress --config=webpack/client.config.js",
    "build:client-no-loader": "cross-env NO_LOADER=true parallel-webpack --progress --config=webpack/client.config.js",
    "build:modules": "node scripts/build_modules.js",
    "run:app": "yarn lint:app && yarn build:app && electron .",
    "run:server": "yarn lint:server && yarn build:server && yarn start",
    "run:client": "yarn lint:client && yarn build:client && yarn start",
    "run:client-no-loader": "yarn lint:client && yarn build:client-no-loader && yarn start",
    "lint:app": "tslint sources/**/*.ts*",
    "lint:server": "tslint sources/server/**/*.ts sources/models/**/*.ts",
    "lint:client": "tslint sources/client/**/*.ts*",
    "watch:client": "cross-env NO_LOADER=true parallel-webpack --progress --config=webpack/client.config.js --watch",
    "test": "nyc mocha",
    "test:run": "mocha",
    "test:coverage": "",
    "pack": "yarn build:modules && yarn build:prod && cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true build --dir",
    "dist": "yarn build:modules && yarn test && yarn build:prod && cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true build",
    "dist:ci": "yarn build:prod && cross-env ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true build",
    "authors": "node scripts/run.js authors.sh",
    "changelog": "gren changelog -o && gren release -o",
    "precommit": "tslint --fix sources/**/*.ts*"
  },
  "nyc": {
    "include": [
      "sources/server/*.ts",
      "sources/server/api/**/*.ts",
      "sources/models/**/*.ts"
    ],
    "extension": ".ts",
    "require": "ts-node/register",
    "exclude": "**/*.d.ts",
    "reporter": "lcov",
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "cache": true
  }
}
