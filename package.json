{
  "name": "vitrine",
  "version": "0.4.1",
  "description": "A modern game library using Electron, NodeJS and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/paul-roman/vitrine.git"
  },
  "build": {
    "appId": "com.github.paul-roman.vitrine",
    "productName": "Vitrine",
    "win": {
      "target": "nsis",
      "icon": "public/img/vitrine.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}_${version}_Setup.${ext}",
      "multiLanguageInstaller": true,
      "publish": {
        "provider": "github",
        "vPrefixedTagName": true
      }
    },
    "files": [
      "!.circleci",
      "!.idea",
      "!assets",
      "!config/build",
      "!.gitignore",
      "!LICENSE.md",
      "!README.md",
      "!tsconfig.json",
      "!webpack.config.js"
    ],
    "extraResources": [
      "games",
      "config",
      "scripts/*.exe"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "bootstrap-datepicker": "^1.7.1",
    "change-case": "^3.0.1",
    "dateformat": "^2.0.0",
    "download-file": "^0.1.5",
    "electron-titlebar-absolute": "0.0.4",
    "electron-updater": "^2.8.7",
    "font-awesome": "^4.7.0",
    "form-to-object": "^5.0.0",
    "glob": "^7.1.2",
    "igdb-api-node": "^3.0.2",
    "jquery": "^3.2.1",
    "jquery-contextmenu": "^2.5.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-percentage-circle": "^0.2.0",
    "truncate": "^2.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/bootstrap-datepicker": "0.0.9",
    "@types/chai": "^4.0.4",
    "@types/dateformat": "^1.0.1",
    "@types/electron": "^1.6.10",
    "@types/glob": "^5.0.32",
    "@types/jquery": "^3.2.12",
    "@types/jquery.contextmenu": "^1.7.33",
    "@types/mkdirp": "^0.5.1",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.25",
    "@types/rimraf": "0.0.28",
    "@types/uuid": "^3.4.1",
    "animate.sass": "^1.0.1",
    "awesome-typescript-loader": "^3.2.3",
    "base64-font-loader": "0.0.4",
    "bootstrap-sass": "^3.3.7",
    "chai": "^4.1.1",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^0.28.5",
    "electron": "^1.7.6",
    "electron-builder": "^19.26.0",
    "html-minifier": "^3.5.3",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "parallel-webpack": "^2.1.0",
    "sass-loader": "^6.0.6",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.1",
    "webpack": "^3.5.5"
  },
  "scripts": {
    "compile-cpp": "cl scripts/regWatcher.cpp Advapi32.lib /EHsc && cl scripts/gameLauncher.cpp Advapi32.lib /EHsc",
    "build-html": "node scripts/htmlCompiler.js assets/html/main.html public/main.html && node scripts/htmlCompiler.js assets/html/loading.html public/loading.html",
    "start": "webpack && npm run build-html && electron .",
    "run-server-electron": "webpack --config config/build/server.build.js && electron .",
    "run-client-electron": "webpack --config config/build/client.build.js && electron .",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --timeout 15000",
    "pack": "webpack && build --dir",
    "dist": "npm test && webpack && build",
    "release": "npm test && webpack && build --publish always"
  }
}
