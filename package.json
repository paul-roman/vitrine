{
  "name": "vitrine",
  "version": "0.1.0",
  "description": "A modern game library using Electron, NodeJS and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "build": {
    "appId": "my.id",
    "productName": "Vitrine",
    "files": [
      "!.circleci",
      "!assets",
      "!config/build",
      "!.gitignore",
      "!LICENSE",
      "!README.md",
      "!tsconfig.json",
      "!webpack.config.js"
    ],
    "extraResources": [
      "games",
      "config",
      "scripts"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "bootstrap-datepicker": "^1.7.1",
    "change-case": "^3.0.1",
    "dateformat": "^2.0.0",
    "download-file": "^0.1.5",
    "electron-titlebar": "0.0.3",
    "form-to-object": "^5.0.0",
    "get-closest": "0.0.4",
    "glob": "^7.1.2",
    "igdb-api-node": "^3.0.2",
    "jquery": "^3.2.1",
    "jquery-contextmenu": "^2.5.0",
    "levenshtein": "^1.0.5",
    "rimraf": "^2.6.1",
    "sass-percentage-circle": "^0.2.0",
    "truncate": "^2.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/bootstrap-datepicker": "0.0.9",
    "@types/dateformat": "^1.0.1",
    "@types/electron": "^1.6.10",
    "@types/glob": "^5.0.30",
    "@types/jquery": "^3.2.11",
    "@types/jquery.contextmenu": "^1.7.32",
    "@types/node": "^8.0.20",
    "@types/rimraf": "0.0.28",
    "@types/uuid": "^3.4.0",
    "animate.sass": "^1.0.1",
    "awesome-typescript-loader": "^3.2.2",
    "bootstrap-sass": "^3.3.7",
    "cheerio": "^1.0.0-rc.2",
    "electron": "^1.7.6",
    "electron-builder": "^19.20.0",
    "font-awesome": "^4.7.0",
    "html-minifier": "^3.5.3",
    "node-sass-chokidar": "0.0.3",
    "parallel-webpack": "^2.1.0",
    "typescript": "^2.4.2",
    "webpack": "^3.5.1"
  },
  "scripts": {
    "build-html": "node scripts\\htmlCompiler.js assets\\html\\main.html public\\main.html && node scripts\\htmlCompiler.js assets\\html\\loading.html public\\loading.html",
    "build-css": "node-sass-chokidar assets/sass/main.scss public/app.css",
    "build-prod": "node-sass-chokidar assets/sass/main.scss public/app.css --output-style compressed",
    "start": "webpack && npm run build-html && npm run build-css && electron .",
    "run-electron": "electron .",
    "run-server-electron": "webpack --config config/build/server.build.js && electron .",
    "run-client-electron": "webpack --config config/build/client.build.js && electron .",
    "run-style-electron": "npm run build-css && electron .",
    "test": "echo \"Error: no test specified\" && exit 0",
    "pack": "webpack && npm run build-prod && electron-builder --dir",
    "dist": "webpack && npm run build-prod && electron-builder"
  }
}
