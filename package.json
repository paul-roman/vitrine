{
  "name": "vitrine",
  "version": "0.7.0",
  "description": "A modern game library using Electron, Node and IGDB.",
  "main": "public/server.js",
  "author": "Paul Roman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/paul-roman/vitrine.git"
  },
  "build": {
    "appId": "com.github.paul-roman.vitrine",
    "productName": "Vitrine",
    "win": {
      "target": "nsis",
      "icon": "assets/client/resources/images/vitrine.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}_${version}_Setup.${ext}",
      "multiLanguageInstaller": true,
      "publish": {
        "provider": "github",
        "vPrefixedTagName": true
      }
    },
    "files": [
      "!.circleci",
      "!.idea",
      "!assets",
      "!games",
      "!node_modules",
      "!tests",
      "!scripts",
      "!.gitignore",
      "!LICENSE.md",
      "!README.md",
      "!tsconfig.json",
      "!vitrine.log.html",
      "!webpack.*.js",
      "!yarn.lock"
    ],
    "extraResources": [
      "config",
      "scripts/*.node",
      "*app-update.yml"
    ],
    "extraMetadata": {
      "env": "prod"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-solid": "^5.0.8",
    "@fortawesome/react-fontawesome": "0.0.17",
    "aphrodite": "2.1.0",
    "css-verbose": "^0.3.0",
    "download-file": "^0.1.5",
    "electron-updater": "^2.21.3",
    "fs-extra": "5.0.0",
    "glob": "^7.1.2",
    "google-translate-api": "^2.3.0",
    "igdb-api-node": "3.1.3",
    "moment": "2.21.0",
    "react": "^16.2.0",
    "react-contextmenu": "^2.9.2",
    "react-datetime": "^2.14.0",
    "react-dom": "^16.2.0",
    "react-redux": "5.0.7",
    "react-tooltip": "^3.4.0",
    "redux": "^3.7.2",
    "rimraf": "^2.6.2",
    "semantic-ui-react": "^0.78.3",
    "steam-web": "0.7.0",
    "uuid": "^3.2.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@types/aphrodite": "^0.5.7",
    "@types/chai": "^4.1.2",
    "@types/fs-extra": "5.0.1",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.0.0",
    "@types/node": "^8.5.9",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.15",
    "@types/react-tooltip": "^3.3.4",
    "@types/rimraf": "2.0.2",
    "@types/uuid": "^3.4.3",
    "@types/winreg": "^1.2.30",
    "asar": "^0.14.3",
    "awesome-typescript-loader": "^4.0.1",
    "base64-inline-loader": "^1.1.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.6.2",
    "electron-node-loader": "^1.1.1",
    "html-webpack-plugin": "^3.1.0",
    "less": "^2.7.3",
    "less-loader": "^4.1.0",
    "less-vars-loader": "^1.1.0",
    "mocha": "^5.0.5",
    "node-gyp": "^3.6.2",
    "semantic-ui-less": "^2.2.14",
    "style-loader": "^0.20.3",
    "ts-node": "^3.3.0",
    "typescript": "^2.7.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13"
  },
  "scripts": {
    "build": "webpack --progress && electron .",
    "build-scripts": "call scripts/buildModules.bat",
    "run-server": "webpack --progress --config webpack.server.config.js && electron .",
    "run-client": "webpack --progress --config webpack.client.config.js && electron .",
    "watch-client": "webpack --progress --config webpack.client.config.js --watch",
    "start": "electron .",
    "test": "mocha -r ts-node/register tests/**/*.test.ts --timeout 20000",
    "pack": "yarn build-scripts && webpack --progress --config webpack.prod.config.js && build --dir",
    "dist": "yarn build-scripts && yarn test && webpack --progress --config webpack.prod.config.js && build"
  }
}
